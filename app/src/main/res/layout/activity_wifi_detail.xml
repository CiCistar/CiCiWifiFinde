<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white"
  android:orientation="vertical">

  <include layout="@layout/layout_title_bar" />

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <include layout="@layout/layout_wifi_list" />

  </FrameLayout>

  <android.support.v4.view.ViewPager
    android:id="@+id/vp_wifi"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_margin="10dp"
    android:background="@drawable/shpe_border" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/tv_detail"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawablePadding="5dp"
      android:drawableTop="@drawable/ic_action_database"
      android:gravity="center"
      android:text="详细"
      android:textColor="@android:color/holo_blue_light"
      android:textSize="15dp" />

    <TextView
      android:id="@+id/tv_history"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawablePadding="5dp"
      android:drawableTop="@drawable/ic_action_edit"
      android:gravity="center"
      android:text="历史"
      android:textSize="15dp" />

    <TextView
      android:id="@+id/tv_phone"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawablePadding="5dp"
      android:drawableTop="@drawable/ic_action_users"
      android:gravity="center"
      android:text="手机"
      android:textSize="15dp" />

    <TextView
      android:id="@+id/tv_connection"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawablePadding="5dp"
      android:drawableTop="@drawable/ic_action_goright"
      android:gravity="center"
      android:text="连接"
      android:textSize="15dp" />

  </LinearLayout>
</LinearLayout>